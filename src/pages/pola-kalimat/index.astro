---
import Layout from "../../layouts/Layout.astro";
import PolaList from "../../components/pola-kalimat/PolaList";
import { mockPolaKalimat } from "../../lib/mockData";
import { Layers } from "lucide-react";

import { supabase } from "../../lib/supabase";

let polaData = mockPolaKalimat;

if (supabase) {
  const { data, error } = await supabase
    .from("bunpo_with_level")
    .select("*")
    .eq("bunpo_type", "sentence_pattern")
    .order("jlpt_level", { ascending: false })
    .order("pattern", { ascending: true });

  if (data && !error && data.length > 0) {
    polaData = data;
    console.log(`Loaded ${data.length} pola kalimat from Supabase`);
  } else {
    console.log(
      "Using mock pola, Supabase error:",
      error?.message || "No data",
    );
  }
}
---

<Layout title="Pola Kalimat">
  <section class="py-12 lg:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-12 border-b border-border-line pb-8">
        <div class="flex items-center gap-6 mb-6">
          <div
            class="flex h-16 w-16 items-center justify-center bg-brand-neon border border-ink shadow-[4px_4px_0px_0px_rgba(9,9,11,1)]"
          >
            <span class="font-jp text-3xl font-black text-ink">ä¾‹</span>
          </div>
          <div>
            <h1
              class="text-4xl md:text-5xl font-black text-ink uppercase tracking-tighter mb-2"
            >
              Pola Kalimat
            </h1>
            <p class="text-lg text-subtle font-medium max-w-xl">
              Construct naturally. Master sentence patterns for everyday
              conversation.
            </p>
          </div>
        </div>

        <div class="flex flex-wrap gap-4">
          <a
            href="#"
            class="inline-flex items-center gap-2 px-6 py-3 bg-ink text-canvas font-bold uppercase tracking-widest text-sm hover:bg-brand-orange hover:text-ink transition-colors border border-transparent hover:border-ink"
          >
            <Layers className="h-4 w-4" />
            Flashcard Mode
          </a>
        </div>
      </div>

      <PolaList initialPola={polaData} client:visible />
    </div>
  </section>
</Layout>
