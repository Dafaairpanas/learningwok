---
import Layout from "../../layouts/Layout.astro";
import { LogIn } from "lucide-react";
---

<Layout title="Admin Login">
  <section
    class="flex min-h-[80vh] items-center justify-center py-12 bg-pattern-grid"
  >
    <div class="mx-auto w-full max-w-md px-4">
      <div
        class="border-2 border-ink bg-canvas p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] relative overflow-hidden"
      >
        <!-- Decorative blob -->
        <div
          class="absolute -top-10 -right-10 w-32 h-32 bg-brand-neon rounded-full blur-xl opacity-50 pointer-events-none"
        >
        </div>

        <!-- Header -->
        <div class="text-center mb-8 relative z-10">
          <div
            class="mx-auto mb-4 flex h-16 w-16 items-center justify-center border-2 border-ink bg-brand-neon shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]"
          >
            <span class="text-3xl font-black">üéå</span>
          </div>
          <h1 class="text-3xl font-black uppercase tracking-tighter text-ink">
            Admin Login
          </h1>
          <p
            class="mt-2 text-sm font-bold uppercase tracking-widest text-subtle"
          >
            Secure Access Portal
          </p>
        </div>

        <!-- Login Form -->
        <form id="login-form" class="space-y-6 relative z-10">
          <div>
            <label
              for="email"
              class="block text-xs font-bold uppercase tracking-widest text-ink mb-2"
            >
              Email Identifier
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="block w-full border-2 border-border-line bg-surface p-3 font-medium focus:border-ink focus:outline-none focus:ring-0 transition-colors"
              placeholder="admin@example.com"
            />
          </div>

          <div>
            <label
              for="password"
              class="block text-xs font-bold uppercase tracking-widest text-ink mb-2"
            >
              Passcode
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="block w-full border-2 border-border-line bg-surface p-3 font-medium focus:border-ink focus:outline-none focus:ring-0 transition-colors"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            />
          </div>

          <div
            id="error-message"
            class="hidden border-2 border-red-600 bg-red-50 p-4 text-sm font-bold text-red-600"
          >
          </div>

          <button
            type="submit"
            class="w-full flex items-center justify-center gap-2 border-2 border-ink bg-ink text-canvas py-4 font-black uppercase tracking-widest hover:bg-brand-orange hover:text-ink hover:border-ink transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px]"
          >
            <LogIn className="h-4 w-4" />
            Authenticate
          </button>
        </form>

        <!-- Demo Note -->
        <div class="mt-8 border-t-2 border-border-line pt-6 text-center">
          <p class="text-xs text-subtle font-mono">
            <span class="bg-ink text-canvas px-1 font-bold">MODE:</span> RESTRICTED
            ACCESS
          </p>
        </div>
      </div>

      <!-- Back Link -->
      <div class="mt-8 text-center">
        <a
          href="/"
          class="text-xs font-bold uppercase tracking-widest text-subtle hover:text-ink border-b-2 border-transparent hover:border-ink transition-all pb-1"
        >
          ‚Üê Return to Public Site
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { supabase } from "../../lib/supabase";

  const form = document.getElementById("login-form");
  const errorMessage = document.getElementById("error-message");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    if (!errorMessage) return;

    errorMessage.classList.add("hidden");
    errorMessage.textContent = "";

    const formData = new FormData(e.target as HTMLFormElement);
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;

    if (!supabase) {
      errorMessage.classList.remove("hidden");
      errorMessage.textContent =
        "Supabase client not initialized. Check your environment variables.";
      return;
    }

    try {
      // 1. Sign in
      const {
        data: { user },
        error: signInError,
      } = await supabase.auth.signInWithPassword({
        email,
        password,
      });

      if (signInError) throw signInError;

      if (!user) throw new Error("No user returned");

      // 2. Check if user is admin
      const { data: adminData, error: adminError } = await supabase
        .from("admins")
        .select("id")
        .eq("id", user.id)
        .single();

      if (adminError || !adminData) {
        // Not an admin, sign out
        await supabase.auth.signOut();
        throw new Error("Unauthorized: Access restricted to administrators.");
      }

      // 3. Redirect to dashboard
      window.location.href = "/admin/dashboard";
    } catch (err: any) {
      errorMessage.classList.remove("hidden");
      errorMessage.textContent = err.message || "Login failed";
    }
  });
</script>
