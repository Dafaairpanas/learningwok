---
import Layout from "../../layouts/Layout.astro";
import KosakataList from "../../components/kosakata/KosakataList";
import { materiService } from "../../services/materi";
import { Layers } from "lucide-react";

// Fetch kosakata data from Supabase using materiService
const kosakataData = await materiService.getKosakata();
console.log(`Loaded ${kosakataData.length} kosakata from Supabase via Service`);
---

<Layout title="Kosakata">
  <section>
    <div class="border-b border-border-line bg-surface/30 p-8 lg:p-16">
      <!-- Header -->
      <div class="max-w-7xl mx-auto">
        <div
          class="inline-flex items-center gap-2 border border-ink px-3 py-1 mb-6"
        >
          <span class="font-jp font-bold">語彙</span>
          <span class="text-xs font-bold tracking-widest uppercase"
            >Database</span
          >
        </div>

        <h1
          class="text-4xl md:text-8xl font-black tracking-tighter uppercase leading-none mb-6"
        >
          Kosakata<br /><span
            class="text-stroke text-transparent"
            style="-webkit-text-stroke: 2px var(--color-ink);">Vault</span
          >
        </h1>

        <p class="text-xl max-w-2xl leading-relaxed text-subtle">
          Essential vocabulary for JLPT mastery. Filter by level, category, and
          more.
        </p>

        <!-- Quick Actions -->
        <div class="mt-8 flex flex-wrap gap-4">
          <a
            href="/flashcards"
            class="btn-swiss bg-brand-neon text-ink border-transparent hover:bg-ink hover:text-brand-neon"
          >
            <Layers className="h-4 w-4 mr-2" />
            Flashcard Mode
          </a>
        </div>
      </div>
    </div>

    <div class="mx-auto border-b border-border-line">
      <KosakataList initialKosakata={kosakataData} client:visible />
    </div>
  </section>
</Layout>
