---
interface Props {
  kanji: string;
  romaji: string;
  meaning: string;
  strokes: number;
  level: string;
}

const { kanji, romaji, meaning, strokes, level } = Astro.props;
---

<div
  class="col-span-1 lg:col-span-2 row-span-2 bg-canvas relative flex flex-col justify-between border-b border-r border-border-line group overflow-hidden"
>
  <!-- Grid Background -->
  <div
    class="absolute inset-0 bg-[linear-gradient(to_right,#e5e7eb_1px,transparent_1px),linear-gradient(to_bottom,#e5e7eb_1px,transparent_1px)] bg-[size:24px_24px] opacity-20 pointer-events-none"
  >
  </div>

  <div
    class="relative z-10 flex-1 flex flex-col item-center justify-center text-center p-8"
  >
    <div
      class="inline-flex items-center justify-center border border-brand-orange px-4 py-1 rounded-full text-brand-orange text-xs font-bold tracking-widest uppercase mb-8 mx-auto bg-canvas"
    >
      Word of the Day
    </div>

    <h1
      class="text-[12rem] leading-none font-bold font-jp mb-4 transition-transform group-hover:scale-105 duration-300 ease-out text-ink"
    >
      {kanji}
    </h1>
    <div class="text-4xl font-bold text-ink">{romaji}</div>
    <div class="text-xl text-subtle mt-2 font-medium">({meaning})</div>
  </div>

  <!-- Tech Specs Footer -->
  <div
    class="relative z-10 grid grid-cols-2 border-t border-border-line bg-surface/50 backdrop-blur-sm"
  >
    <div class="p-4 text-center border-r border-border-line">
      <span
        class="block text-xs font-bold tracking-widest uppercase text-subtle mb-1"
        >Strokes</span
      >
      <span class="text-2xl font-bold text-ink">{strokes}</span>
    </div>
    <div class="p-4 text-center">
      <span
        class="block text-xs font-bold tracking-widest uppercase text-subtle mb-1"
        >Level</span
      >
      <span class="text-2xl font-bold text-ink">{level}</span>
    </div>
  </div>
</div>
