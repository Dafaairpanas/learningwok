      </div>

      <!-- JLPT Levels -->
      <div>
        <h3 class="mb-4 text-xs font-bold uppercase tracking-widest text-ink">
          Level JLPT
        </h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a
              href="/kanji?level=N5"
              class="text-subtle hover:text-brand-neon hover:text-ink transition-colors"
              >JLPT N5</a
            >
          </li>
          <li>
            <a
              href="/kanji?level=N4"
