---
import "../styles/global.css";
// import Header from "../components/layout/Header.astro"; // I will check Header first
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Belajar bahasa Jepang otodidak mulai dari nol. Materi lengkap JLPT N5 & N4: Kanji, Kosakata, Bunpo, dan pola kalimat. Gratis dan interaktif!",
  image = "/og-image.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} | Nihongoin - Belajar Bahasa Jepang Otodidak</title>
    <meta
      name="title"
      content={`${title} | Nihongoin - Belajar Bahasa Jepang Otodidak`}
    />
    <meta
      name="keywords"
      content="Belajar bahasa jepang otodidak, Belajar bahasa jepang, Belajar JLPT, Belajar JLPT N5, Belajar JLPT N4, Kamus Bahasa Jepang, Kanji N5, Bunpo N5"
    />
    <meta
      name="google-site-verification"
      content="db6FLAblf4X_uUvz2L63fgEndfxXGYCfIFHe52FdQjc"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Nihongoin`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Nihongoin`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Manifest for PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#1A1A1A" />

    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class="min-h-screen bg-canvas text-ink selection:bg-brand-neon selection:text-ink transition-colors duration-300"
  >
    <div
      class="flex min-h-screen flex-col border-x border-border-line max-w-7xl mx-auto relative"
    >
      <Header currentPath={currentPath} />

      <!-- Fallback if Header doesn't have slot -->
      <!-- I will check Header.astro content next step to be sure, but for now I'll inject the script in head and leave the body as is, waiting to modify Header.astro -->
      <main class="flex-1 bg-canvas border-b border-border-line">
        <slot />
      </main>
      <Footer />

      <!-- Floating Toggle Mobile (Optional, or integrate into Header) -->
    </div>
  </body>
</html>
